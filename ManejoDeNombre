import java.util.Scanner;

public class ProgramaManejoDeNombresTarea3 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Ingrese el primer nombre");
        String nombre1 = scanner.nextLine();

        System.out.println("Ingrese el segundo nombre");
        String nombre2 = scanner.nextLine();

        System.out.println("Ingrese el tercer nombre");
        String nombre3 = scanner.nextLine();

        String concatenado1 = String.valueOf(nombre1.toUpperCase().charAt(1)+ "." + nombre1.substring(nombre1.length()-2));
        String concatenado2 = String.valueOf(nombre2.toUpperCase().charAt(1)+ "." + nombre2.substring(nombre2.length()-2));
        String concatenado3 = String.valueOf(nombre3.toUpperCase().charAt(1)+ "." + nombre3.substring(nombre3.length()-2));

        System.out.println("Los nombre concatenados son: " + concatenado1 + "_" + concatenado2 + "_" + concatenado3 );

    }
}
